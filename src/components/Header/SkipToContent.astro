---
import i18next from 'i18next';
type Props = {
	lang: string;
};
const { lang } = Astro.props;
i18next.changeLanguage(lang);
const skipToContentText = i18next.t('skipToContentText', 'Skip to Content');
---

<a href="#article" class="sr-only focus:not-sr-only skiplink"><span>{skipToContentText}</span></a>

<style>
	.skiplink,
	.skiplink:focus,
	.skiplink:focus-visible {
		position: absolute;
		padding: 0.25em;
		font-size: larger;
		top: 0;
		left: 0;
		right: 0;
		z-index: 9;
		display: block;
		text-align: center;
		background-color: var(--theme-text-accent);
		color: var(--theme-bg);
		border-radius: 0.25em;
		outline: var(--theme-bg) solid 1px;
		outline-offset: 0;
	}
</style>
